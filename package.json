{
  "name": "rspack-plugin-splash-screen",
  "version": "0.2.2",
  "description": "Rspack plugin for adding a splash screen to your app",
  "keywords": [
    "rspack",
    "rspack-plugin",
    "rsbuild",
    "splash-screen"
  ],
  "author": "Teemu Taskula",
  "license": "MIT",
  "main": "./dist/plugin/plugin.js",
  "types": "./dist/plugin/plugin.d.ts",
  "exports": {
    ".": {
      "require": "./dist/plugin/plugin.js",
      "import": "./dist/plugin/plugin.mjs",
      "types": "./dist/plugin/plugin.d.ts"
    },
    "./runtime": {
      "require": "./dist/runtime/runtime.js",
      "import": "./dist/runtime/runtime.mjs",
      "types": "./dist/runtime/runtime.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "playwright test",
    "test:build": "pnpm run build && cd example && pnpm run build",
    "test:ui": "playwright test --ui",
    "build": "rslib build",
    "watch": "rslib build --watch",
    "example:link": "yalc publish --push && cd example && yalc add rspack-plugin-splash-screen && pnpm i",
    "example:sync": "yalc push && cd example && pnpm i",
    "release": "pnpm run build && np"
  },
  "devDependencies": {
    "@rslib/core": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "@rspack/core": "catalog:",
    "@playwright/test": "catalog:"
  }
}
